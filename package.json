{
  "name": "tobaccanist",
  "version": "0.0.0",
  "description": "Italian tobacco shop products API",
  "module": "commonjs",
  "main": "dist/server.js",
  "scripts": {
    "clean": "rimraf dist public/assets/css",
    "build": "npm-run-all clean build:*",
    "build:server": "esbuild --bundle --platform=node --target=node20 --format=cjs --outdir=dist --packages=external --sourcemap src/server.ts",
    "build:html": "mkdirp dist/views && cp -r src/views/pages dist/views/pages && cp -r src/views/partials dist/views/",
    "build:css": "tailwindcss -i src/views/tailwind.css -o public/assets/css/tailwind.css",
    "dev": "npm-run-all -p dev:*",
    "dev:server": "tsx --watch ./src/server.ts",
    "dev:css": "pnpm build:css --watch",
    "format": "prettier --write src prettier.config.mjs .eslintrc.js postcss.config.js tailwind.config.js",
    "lint": "eslint --ext .ts src",
    "start": "NODE_ENV=production node dist/server.js",
    "typecheck": "tsc"
  },
  "keywords": [
    "tabacchi",
    "tobacco",
    "fastify"
  ],
  "author": "Andrew Hu <hu.lha86@gmail> (https://andrewhu.dev)",
  "license": "MIT",
  "dependencies": {
    "@bull-board/api": "^5.16.0",
    "@bull-board/fastify": "^5.16.0",
    "@fastify/basic-auth": "^5.1.1",
    "@fastify/env": "^4.3.0",
    "@fastify/jwt": "^8.0.0",
    "@fastify/redis": "^6.1.1",
    "@fastify/sensible": "^5.5.0",
    "@fastify/static": "^7.0.3",
    "@fastify/type-provider-typebox": "^4.0.0",
    "@fastify/view": "^9.0.0",
    "@libsql/client": "^0.6.0",
    "@prisma/adapter-libsql": "^5.12.1",
    "@prisma/client": "^5.13.0",
    "@sinclair/typebox": "^0.32.20",
    "@types/node": "20.12.2",
    "basic-ftp": "^5.0.5",
    "bullmq": "^5.5.0",
    "close-with-grace": "^1.3.0",
    "ejs": "^3.1.9",
    "fastify": "^4.26.2",
    "fastify-healthcheck": "^4.4.0",
    "fastify-plugin": "^4.5.1",
    "ioredis": "^5.3.2",
    "pino-pretty": "^11.0.0",
    "prisma": "^5.13.0",
    "stream-json": "^1.8.0",
    "xml-to-json-stream": "^1.1.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.2.1",
    "@types/ejs": "^3.1.5",
    "@types/eslint": "^8.56.7",
    "@types/stream-json": "^1.7.7",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "autoprefixer": "^10.4.19",
    "cp": "^0.2.0",
    "esbuild": "^0.20.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-isaacscript": "^3.12.2",
    "eslint-plugin-prettier": "^5.1.3",
    "fastify-tsconfig": "github:fastify/tsconfig",
    "mkdirp": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "prettier-plugin-ejs": "^1.0.3",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.3",
    "tsx": "^4.7.1",
    "typescript": "^5.4.3"
  },
  "engines": {
    "node": ">=20.12.0"
  },
  "packageManager": "pnpm@8.5.1"
}
